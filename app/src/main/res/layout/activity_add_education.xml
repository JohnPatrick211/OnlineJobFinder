<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0FF"
    android:gravity="center_horizontal"
    tools:context=".applicant.AddEducationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:background="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/edittext_addschool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School/Institute"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:background="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/edittext_addcourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course/Field of Studies"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:padding="10dp"
            android:background="#FFFFFF"
            android:id="@+id/tv_addyeargraduation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of Graduation"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="18dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnsaveeducation"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shapebutton"
        android:text="Save"
        android:textColor="#FFFFFF"/>

</LinearLayout>