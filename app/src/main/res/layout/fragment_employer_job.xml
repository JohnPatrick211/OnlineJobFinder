<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".employer.EmployerJobFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/bruh">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/searchemployerjob"
                android:queryHint="Seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:text="Specialization"
                android:textSize="18sp"
                android:id="@+id/tv_searchemployerspecialization"/>
            <!--            <Spinner-->
            <!--                android:layout_marginTop="40dp"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:id="@+id/spinner_category"/>-->

            <TextView
                android:layout_toRightOf="@+id/tv_searchemployerspecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:text="Region"
                android:textSize="18sp"
                android:id="@+id/tv_searchemployerlocation"/>

            <!--            <Spinner-->
            <!--                android:layout_marginTop="40dp"-->
            <!--                android:layout_toRightOf="@+id/tv_searchspecialization"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:id="@+id/spinner_location"/>-->
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_searchemployerlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_primary"
                android:text="Filter"
                android:textSize="20dp"
                android:id="@+id/btn_employerfilter"/>

        </RelativeLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/employerswipe">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:orientation="vertical"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_employerjobs"
                    android:layout_width="match_parent"
                    android:layout_height="520dp" />
            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatingbutton_addjob"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="-50dp"
        android:layout_margin="16dp"
        app:fabSize="normal"
        app:backgroundTint="@color/black"
        app:elevation="6dp"
        android:src="@drawable/ic_baseline_add_24"/>

</FrameLayout>