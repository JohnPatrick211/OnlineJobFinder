<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0FF"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <com.amar.library.ui.StickyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/stickyscrollview"
        tools:context=".guest.GuestJobDescriptionActivity"
        app:stickyHeader="@+id/title"
        app:stickyFooter="@+id/footer"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/design_default_color_primary_dark"
                android:layout_gravity="center_horizontal"
                android:id="@+id/img_jobdesc_logo"
                />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_jobdesc_jobtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="Junior Programmer"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_jobdesc_jobcompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Codify Ltd"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="vertical"
                android:background="#F0F0FF"
                android:gravity="center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_layout_jobdescription"
                    app:tabTextColor="@color/design_default_color_primary"
                    app:tabIndicatorColor="@color/design_default_color_primary"
                    app:tabSelectedTextColor="@color/design_default_color_primary"
                    android:background="@android:color/white">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tabitem_applicant"
                        android:text="Job Description"/>
                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tabitem_employer"
                        android:text="Company Overview"/>
                </com.google.android.material.tabs.TabLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_jobdescription"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="vertical"
                android:background="#F0F0FF"
                android:gravity="center_horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Job Description"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_jobdesc_jobdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_companyoverview"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="vertical"
                android:background="#F0F0FF"
                android:gravity="center_horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Company Overview"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_jobdesc_jobcompanyoverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="vertical"
                android:background="#F0F0FF"
                android:gravity="center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Additional information"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Region"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/tv_jobdesc_joblocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="Region 4-A"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Address"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/tv_jobdesc_jobaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="Bridgeton Street, Trece Martires, Cavite, Batangas"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Specialization"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/tv_jobdesc_jobspecialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="Technology"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Job Date Posted"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/tv_jobdesc_jobdateposted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:gravity="left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Salary"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/tv_jobdesc_jobsalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="vertical"
                android:background="#F0F0FF"
                android:gravity="center_horizontal">

            </LinearLayout>


            <RelativeLayout
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:gravity="center_horizontal">

                <Button
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shapebutton"
                    android:id="@+id/btn_savejobdesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Save"/>

                <Button
                    android:id="@+id/btn_applyjobdesc"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shapebutton"
                    android:layout_toRightOf="@+id/btn_savejobdesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Apply"/>


            </RelativeLayout>

        </LinearLayout>

    </com.amar.library.ui.StickyScrollView>

</LinearLayout>