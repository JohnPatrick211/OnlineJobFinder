<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_applicantprofilepic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                />

            <TextView
                android:id="@+id/textView_applicantname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sample Name"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textView_applicantemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:text="Sample Email"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView_applicantaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:text="Sample Address"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView_applicantcontactno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:text="Sample Contact No"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView_applicantgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:text="Sample Gender"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textView_applicantstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sample Status"
                android:textSize="20sp"/>



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>