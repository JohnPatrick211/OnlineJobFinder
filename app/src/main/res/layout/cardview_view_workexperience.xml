<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/image_editworkexperience"
                android:layout_marginRight="0dp"
                android:layout_width="50dp"
                android:padding="6dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_gravity="right"
                />

            <TextView
                android:layout_marginTop="-40dp"
                android:id="@+id/textView_applicantworkposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sample Position"
                android:textStyle="bold"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/textView_applicantworkcompanyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sample Company name"
                android:textSize="16sp"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView_applicantworkdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Work Date"
                android:textSize="16sp"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>