    <EditText
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"
        android:id="@+id/edittext_employer_companyoverview"
        android:background="@drawable/companyoverview"
        android:padding="10dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="Company Overview"/>

    <TextView
        android:id="@+id/txtview_BIR"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="BIR Certificate"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/img_register_BIR"
        android:layout_marginTop="15dp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/txt_selectBIR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Here"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/design_default_color_primary_dark"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/txt_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Clicking “SEND” Button, You agree with our"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtview_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_below="@+id/txt_terms"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/txt_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and "
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/txtview_privacy"
            android:layout_below="@+id/txt_terms"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/txtview_termsandconditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textColor="@color/design_default_color_primary"
            android:layout_toRightOf="@+id/txt_and"
            android:layout_below="@+id/txt_terms"
            android:textStyle="bold"
            android:textSize="15dp"
            />


    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnsendtoapproval"
        android:layout_marginTop="25dp"
        android:background="@drawable/dialogloginbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Send"
        android:textColor="#FFF"
        android:textSize="15sp"
        app:backgroundTint="@null"
        />


