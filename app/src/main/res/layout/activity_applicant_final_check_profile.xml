<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/stickyscrollview"
    tools:context=".applicant.ApplicantFinalCheckProfileActivity"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0FF"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".applicant.ApplicantFinalCheckProfileActivity">

    <include
        android:layout_width="fill_parent"
        android:layout_height="1300px"
        android:layout_gravity="center"
        android:id="@+id/ln_delayloadinglayout"
        layout="@layout/delayloadinglayout"
        />


    <LinearLayout
        android:id="@+id/bruh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_manageaccountprofile"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_width="50dp"
            android:padding="6dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_gravity="right"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="-40dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:id="@+id/imguserprofile"
            />


        <TextView
            android:id="@+id/textView_NameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text=""
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView_EmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_ContactNoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text=""

            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_AddressProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text=""
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_SpecializationProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text=""
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textView_GenderProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text=""
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bruh2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Work Experience"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginLeft="-80dp"/>
        <TextView
            android:id="@+id/textView_addworkexperience"
            android:textColor="@color/design_default_color_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="-50dp"
            android:text="Add"
            android:gravity="right"
            android:layout_marginLeft="150dp"/>

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_noworkexperiencelayout"
            layout="@layout/noworkexperiencelayout"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerview_workexperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bruh3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Education"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginLeft="-115dp"/>
        <TextView
            android:id="@+id/textView_addeducation"
            android:textColor="@color/design_default_color_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="-50dp"
            android:text="Add"
            android:gravity="right"
            android:layout_marginLeft="150dp"/>

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_noeducationlayout"
            layout="@layout/noeducationlayout"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:id="@+id/recyclerview_educationalbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bruh4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginBottom="10px"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Resume"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"/>

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_noresumelayout"
            layout="@layout/noresumelayout"
            android:layout_marginBottom="8dp"

            />

        <TextView
            android:id="@+id/textView_ResumeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:text="Resume"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView_ViewResume"
            android:textColor="@color/design_default_color_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:text="View Resume"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView_IntentResume"
            android:textColor="@color/design_default_color_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:text="Upload Document"
            android:gravity="center_horizontal"/>

    </LinearLayout>
    <RelativeLayout
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_applynow"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shapebutton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Apply Now"/>


    </RelativeLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>

