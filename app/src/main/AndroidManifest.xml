<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onlinejobfinder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineJobFinder"
        android:usesCleartextTraffic="true">
        <activity android:name=".applicant.UpdateEducationActivity"></activity>
        <activity android:name=".applicant.AddEducationActivity" />
        <activity android:name=".applicant.UploadResumeActivity" />
        <activity android:name=".tabregister.EmployerRegistrationActivity" />
        <activity android:name=".applicant.EditProfileActivity" />
        <activity android:name=".employer.EmployerActivity" />
        <activity android:name=".EmailActivity" />
        <activity android:name=".ApplicantActivity" />
        <activity android:name=".tabregister.RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>